\mode<presentation>

\input{colors}

% general colors
\setbeamercolor{title}               {bg=yelloweu, fg=black}%
\setbeamercolor{structure}           {fg = darkgrayeu}%
\setbeamercolor{normal text}         {fg = darkgrayeu}%
\setbeamercolor{subtitle}            {fg = darkgrayeu}%
\setbeamercolor{author}              {fg = darkgrayeu}%
\setbeamercolor{alert}               {fg = yelloweu}%
\setbeamercolor{example}             {fg = darkgrayeu}%
%header colors
\setbeamercolor{framelogo}           {bg=white}%
\setbeamercolor{frametitle}          {bg=yelloweu, fg=black}%
%footer colors
\setbeamercolor{title in foot}     {fg=darkgrayeu, bg=lightgrayeu}
\setbeamercolor{author in foot}        {fg=white, bg=grayeu}
\setbeamercolor{pages in foot}        {fg=white, bg=grayeu}
%items
\setbeamercolor{itemize item}        {fg=yelloweu} %цвет пункта
\setbeamercolor{itemize subitem}     {fg=yelloweu} %цвет подпункта
% alert color
\setbeamercolor{alerted text}{fg=alert}

% blocks
\setbeamercolor{block title}{use=structure,fg=yelloweu,bg=darkgrayeu}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alert}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example}

\setbeamercolor{block body}        {fg=darkgrayeu,use=block title,bg=darkgrayeu!10!white}
\setbeamercolor{block body alerted}{fg=darkgrayeu,use=block title alerted,bg=alert!10!white}
\setbeamercolor{block body example}{fg=darkgrayeu,use=block title example,bg=example!10!white}

\mode
<all>