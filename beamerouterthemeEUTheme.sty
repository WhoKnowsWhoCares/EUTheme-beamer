% page geometry
% \geometry{paperheight=7.5in,paperwidth=10.0in}
% ... Hang on! As suggested in the manual, don't mess around with beamer's
% assumed page dimensions (128mm x 96mm). Fonts, for example, do no get 
% automatically scaled and will look tiny if the above is executed.
% Instead, define a multiplier 12.8/(10.0*2.54) = 64/127 and adjust all
% respective lengths.
\RequirePackage{ifthen}

\mode<presentation>

% lengths
\newlength\margin
\setlength\margin{0.43cm}% 0.85cm * 64/127

% images
\ifbeamer@language
    \pgfdeclareimage[width=3cm]{CenterLogo}{./images/CenterLogoUE-\beamer@languagevalue}
\else
    \pgfdeclareimage[width=3cm]{CenterLogo}{./images/CenterLogoUE-rus}
\fi

\ifbeamer@language
    \pgfdeclareimage[height=1cm]{Logo}{./images/LogoUE-\beamer@languagevalue}
\else
    \pgfdeclareimage[height=1cm]{Logo}{./images/LogoUE-rus}
\fi

% frametitle
\defbeamertemplate*{frametitle}{EUTheme}
{%
    \leavevmode%
    \begin{beamercolorbox}[wd=\paperwidth,ht=1.5cm,left]{framelogo}%
    \hbox{%
        \begin{beamercolorbox}[wd=0.7\paperwidth,ht=1cm,center]{frametitle}%
            \usebeamerfont{subtitle}%
            \insertframetitle%
            \vskip1ex%
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=0.3\paperwidth,ht=1cm]{framelogo}%
            \pgfuseimage{Logo}%
            \hspace*{1ex}%
        \end{beamercolorbox}%
        \vfill%
    }
    \end{beamercolorbox}%  
}

\defbeamertemplate*{footline}{EUTheme}%
{%
    \ifbeamer@framenumber%
    \ifnum\c@framenumber=1\else%
    \leavevmode%
    \hbox{%
        \begin{beamercolorbox}[wd=.30\paperwidth,ht=2.5ex,dp=1.25ex,center]{author in foot}%
            \hspace*{2ex}%
            \usebeamerfont{title in head/foot}\insertshortauthor%
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.60\paperwidth,ht=2.5ex,dp=1.25ex,center]{title in foot}%
            \hspace*{2ex}%
            \insertshorttitle{}%
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.10\paperwidth,ht=2.5ex,dp=1.25ex,center]{pages in foot}%
            \usebeamerfont{title in head/foot}
            \insertframenumber{}/\inserttotalframenumber%
        \end{beamercolorbox}
    }%
    \fi%
    \fi%
}

\setbeamertemplate{blocks}[rounded]

\mode
<all>
