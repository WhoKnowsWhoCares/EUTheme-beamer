\mode<presentation>

\defbeamertemplate*{title page}{EUTheme}
{
    \begin{center}%
    \vskip.2cm%
    \begin{beamercolorbox}[wd=0.9\paperwidth,ht=1.5cm, dp=0.5cm, center]{title}%
        \usebeamerfont{title}%
        \usebeamercolor[fg]{title}%
        \inserttitle%
    \end{beamercolorbox}%
    \ifx\insertauthor\@empty%
    \else%
        \vskip2ex%
        \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor%
    \fi%
    \ifx\insertsubtitle\@empty%
    \else%
        \vskip1ex%
        \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle%
    \fi%
    \vskip1ex%
    \pgfuseimage{CenterLogo}%
    \end{center}%
    \vfill%
}

\setbeamertemplate{blocks}[rounded]

\mode
<all>
